<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linear_layout_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@+id/attendance_by_period">

            <RadioButton
                android:id="@+id/attendance_by_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked"
                android:text="View by period" />

            <RadioButton
                android:id="@+id/attendance_by_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked"
                android:text="View by date" />

        </RadioGroup>

        <FrameLayout
            android:id="@+id/attendance_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
        </FrameLayout>
    </LinearLayout>

</ScrollView>